          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="border-bottom-primary mb-4">
              <div class="main-title">
                <h1 class="mb-2 text-gray-800">리뷰 수정</h1>
              </div>
              <h6 class="page-adress">참가자 리뷰 > 참가자 상세 > 리뷰 수정</h6>
            </div>

            <section role="main" class="content-body register-content-body">
              <form id="uploadForm" method="post" enctype="multipart/form-data">
                <h6 class="float-right">
                  <span class="star">*</span>
                  는 필수 입력값
                </h6>

                <table class="register table table-bordered">
                  <tr>
                    <td width="20%" class="table-title-td">
                      작성자<span class="star">*</span>
                    </td>
                    <td width="30%">
                      <input
                        placeholder="작성자를 입력해주세요"
                        type="text"
                        class="form-control"
                        name="reg_user"
                        id="reg_user"
                        required
                      />
                    </td>
                    <td width="20%" class="table-title-td">
                      노출여부<span class="star">*</span>
                    </td>
                    <td width="30%">
                      <div class="col-md-9 filter-inputs">
                        <div class="filter-answer">
                          <label class="radio-button-filter">
                            <input
                              type="radio"
                              name="exposure_yn"
                              value="Y"
                              class="exposure y"
                              checked
                            />
                            Y
                          </label>
                          <label class="radio-button-filter">
                            <input
                              type="radio"
                              name="exposure_yn"
                              class="exposure n"
                              value="N"
                            />
                            N
                          </label>
                        </div>
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td width="20%" class="table-title-td">
                      제목<span class="star">*</span>
                    </td>
                    <td width="30%" colspan="3">
                      <input
                        placeholder="제목을 입력해주세요"
                        type="text"
                        class="form-control"
                        name="title"
                        id="title"
                        required
                      />
                    </td>
                  </tr>
                  <tr>
                    <td width="20%" class="table-title-td">
                      링크<span class="star">*</span>
                    </td>
                    <td width="30%" colspan="3">
                      <input
                        placeholder="링크를 입력해주세요"
                        type="text"
                        class="form-control"
                        name="review_link"
                        id="review_link"
                        oninput="preventDelete(event)"
                        required
                      />
                    </td>
                  </tr>
                  <tr>
                    <td width="20%" class="table-title-td">
                      등록일<span class="star">*</span>
                    </td>
                    <td width="30%">
                      <div class="input-date">
                        <div class="input-daterange input-date date-pick">
                          <input
                            type="text"
                            class="form-control daterange"
                            id="start_date"
                            autocomplete="off"
                          />
                          <span class="input-group-addon">
                            <i class="fa fa-calendar calender-icon"></i>
                          </span>
                        </div>
                        <div class="col-md-6 filter-date">
                          <select class="form-control hour" id="hour"></select>
                          <span class="mlr-5">:</span>
                          <select
                            class="form-control minute"
                            id="minute"
                          ></select>
                          <span class="mlr-5">:</span>
                          <select
                            class="form-control second"
                            id="second"
                          ></select>
                        </div>
                      </div>
                    </td>
                    <td width="20%" class="table-title-td">최종 수정일</td>
                    <td width="30%" id="last_mod_date"></td>
                  </tr>
                  <tr>
                    <td width="20%" class="table-title-td">
                      내용<span class="star">*</span>
                    </td>
                    <td width="80%" colspan="3">
                      <textarea
                        rows="1"
                        class="review-content form-control answer-text-area"
                      ></textarea>
                    </td>
                  </tr>
                  <tr>
                    <td width="20%" rowspan="5" class="table-title-td">
                      파일 첨부
                    </td>
                    <td width="80%" colspan="3">
                      <label for="file1" class="file-input-label"
                        >파일 선택</label
                      >
                      <input
                        type="file"
                        accept=".jpg, .png, .pdf, .xlsx, .hwp, .pptx"
                        id="file1"
                        class="file-input"
                        name="productImgArr[]"
                        required
                      />
                      <span class="file-name"></span>
                      <a class="cancel-btn hidden">X</a>
                    </td>
                  </tr>
                  <tr>
                    <td width="80%" colspan="3">
                      <label for="file2" class="file-input-label"
                        >파일 선택</label
                      >
                      <input
                        type="file"
                        accept=".jpg, .png, .pdf, .xlsx, .hwp, .pptx"
                        id="file2"
                        class="file-input"
                        name="productImgArr[]"
                      />
                      <span class="file-name"></span>
                      <a class="cancel-btn hidden">X</a>
                    </td>
                  </tr>
                  <tr>
                    <td width="80%" colspan="3">
